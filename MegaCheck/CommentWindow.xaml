<Window x:Class="MegaCheck.CommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaCheck"
        mc:Ignorable="d"
        Title="Add Comments to Check Result" Background="AliceBlue" Height="290" Width="450" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Name="txt_title" Margin="15,15,15,0"></TextBlock>
            <TextBox Name="txt_comment" Height="150" Margin="15,15,15,15" TextChanged="txt_comment_TextChanged"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btn_ok" Content="OK" Width="120" Height="30" Margin="0,0,20,0" Click="btn_ok_Click" IsDefault="True"></Button>
                <Button Name="btn_cancel" Content="Cancel" Width="120" Height="30" Margin="0,0,20,0" Click="btn_cancel_Click" IsCancel="True"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
